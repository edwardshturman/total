{
  "name": "total",
  "author": "Edward Shturman",
  "version": "0.1.0",
  "license": "UNLICENSED",
  "description": "A minimalist, web-based expense tracker",
  "repository": {
    "type": "git",
    "url": "https://github.com/edwardshturman/total.git"
  },
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "pretty": "prettier . --check",
    "prebuild": "bun run pretty",
    "lint": "next lint",
    "prepare": "husky",
    "build": "next build",
    "start": "next start",
    "postinstall": "prisma generate",
    "migrate": "dotenv -e .env.local prisma migrate dev",
    "refresh": "git pull && vc env pull"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "dependencies": {
    "@prisma/client": "6.10.1",
    "lucide-react": "^0.525.0",
    "next": "15.4.1",
    "next-auth": "5.0.0-beta.25",
    "plaid": "36.0.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-plaid-link": "4.0.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3.3.1",
    "@types/node": "24.0.1",
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.6",
    "dotenv-cli": "8.0.0",
    "eslint": "9.28.0",
    "eslint-config-next": "15.4.1",
    "eslint-config-prettier": "10.1.5",
    "husky": "9.1.7",
    "lint-staged": "16.1.2",
    "prettier": "3.6.2",
    "prisma": "6.10.1",
    "typescript": "5.8.3"
  }
}
